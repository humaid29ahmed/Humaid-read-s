<%- include("partials/header.ejs") %><!--This form is used to add their Notes as an Option-->
<div class="container  form-centering">
<div class=" form-styling">
    <h1>Add Your Notes</h1>
<form action="/addNotes/<%=id%>" method="post">
    <label for="notes" style="font-size: 40px;"><strong>Notes</strong></label><br>
    <textarea name="notes" class="sizing" id="notes" cols="50" rows="10" placeholder="Enter your notes" required></textarea><br>
    <input type="submit" class="btn btn-primary mb-3 btn-lg" value="Submit">
</form>
</div>
</div>
