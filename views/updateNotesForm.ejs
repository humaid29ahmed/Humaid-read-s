<%- include("partials/header.ejs") %> <!--This form is used to update the existing notes in the database.-->
<div class="container form-styling">
    <h1>Update Your Notes</h1>
<form action="/updateNotes/<%=id%>" method="post">
    <label for="notes" style="font-size: 40px;"><strong>Notes</strong></label><br>
    <textarea name="notes" id="notes" cols="100" rows="20" required><%= notes.notes %></textarea><br>
    <input type="submit" class="btn btn-primary mb-3 btn-lg" value="Submit">
</form>
</div>
